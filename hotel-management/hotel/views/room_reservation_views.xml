<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Vue liste -->
    <record id="view_hotel_room_reservation_list" model="ir.ui.view">
        <field name="name">hotel.room.reservation.list</field>
        <field name="model">hotel.room.reservation</field>
        <field name="arch" type="xml">
            <list string="Room Reservations">
                <field name="client_id"/>
                <field name="room_id"/>
                <field name="nb_person"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="total_price"/>
            </list>
        </field>
    </record>

    <!-- Vue formulaire -->
    <record id="view_hotel_room_reservation_form" model="ir.ui.view">
        <field name="name">hotel.room.reservation.form</field>
        <field name="model">hotel.room.reservation</field>
        <field name="arch" type="xml">
            <form string="Room Reservation">
                <sheet>
                    <group>
                        <field name="client_id"/>
                        <field name="room_id"/>
                        <field name="nb_person"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="equipment_add_ids" widget="many2many_tags"/>
                        <field name="total_price" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hotel_room_reservation" model="ir.actions.act_window">
        <field name="name">Room Reservations</field>
        <field name="res_model">hotel.room.reservation</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create room reservations and manage clients and dates.
            </p>
        </field>
    </record>

    <!-- Menu (sous-menu dans Hotel) -->
    <menuitem id="menu_hotel_root" name="Hotel" sequence="10"/>
    <menuitem id="menu_hotel_reservation" name="Room Reservations" parent="menu_hotel_root" action="action_hotel_room_reservation" sequence="40"/>

</odoo>
