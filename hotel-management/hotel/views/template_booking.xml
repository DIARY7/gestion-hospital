    <template id="list_booking_equipment" name="Booking List">
        <t t-call="hotel.main_layout">
            <section class="page-header">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="display-5 mb-2">Mes Réservations</h1>
                            <p class="lead mb-0">Gérez vos séjours et consultez vos réservations</p>
                        </div>
                    </div>
                </div>
            </section>
            <div class="container py-4">
                <div class="row">
                    <div id="reservationsList">
<!--                        Raha cancelled dia atao "reservation-card cancelled" data-status="cancelled"-->
                        <t t-foreach="bookings" t-as="reservation" >
                            <div class="reservation-card confirmed" data-status="confirmed">
                                <div class="reservation-header">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5 class="mb-1">Réservation #RES001</h5>
                                            <small class="text-muted">Réservée le 15 janvier 2025</small>
                                        </div>
                                        <span class="status-badge status-confirmed">Confirmée</span>
                                    </div>
                                </div>
                                <div class="reservation-body">
                                    <div class="reservation-info">
                                        <div class="info-item">
                                            <div class="info-icon">🏨</div>
                                            <div class="info-content">
                                                <h6>Chambre</h6>
                                                <p>Suite 201 - Deluxe</p>
                                            </div>
                                        </div>
                                        <div class="info-item">
                                            <div class="info-icon">📅</div>
                                            <div class="info-content">
                                                <h6>Dates</h6>
                                                <p>25 Jan - 28 Jan 2025</p>
                                            </div>
                                        </div>
                                        <div class="info-item">
                                            <div class="info-icon">👥</div>
                                            <div class="info-content">
                                                <h6>Personnes</h6>
                                                <p>2 adultes</p>
                                            </div>
                                        </div>
                                        <div class="info-item">
                                            <div class="info-icon">💰</div>
                                            <div class="info-content">
                                                <h6>Total</h6>
                                                <p>497€</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="reservation-actions">
                                        <button class="btn btn-outline-primary btn-sm" onclick="toggleDetails('details1')">
                                            📋 Voir détails
                                        </button>
                                        <button class="btn btn-warning btn-sm">
                                            ✏️ Modifier
                                        </button>
                                        <button class="btn btn-outline-danger btn-sm" onclick="cancelReservation('RES001')">
                                            ❌ Annuler
                                        </button>
                                    </div>
                                    <div id="details1" class="details-section">
                                        <h6>Détails de la réservation</h6>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <p><strong>Prix chambre:</strong> 447€ (149€/nuit)</p>
                                                <p><strong>Équipements:</strong></p>
                                                <div class="equipment-list">
                                                    <span class="equipment-tag">🍳 Petit-déjeuner</span>
                                                    <span class="equipment-tag">🚗 Parking</span>
                                                </div>
                                                <p class="mt-2"><strong>Demandes spéciales:</strong> Chambre avec vue sur jardin</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>

                    </div>
                </div>
            </div>

        </t>
        <script src="/hotel/static/src/js/booking_list.js"></script>

    </template>

</odoo>