<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <template id="form_booking" name="Booking Page">
    <t t-call="hotel.main_layout">
         <!-- Page Header -->
        <section class="page-header">
            <!-- Progress Bar -->
            <div class="progress-container">
                <div class="container">
                    <div class="progress-steps">
                        <div class="step active" data-step="1">
                            <div class="step-number">1</div>
<!--                            <div class="step-label">Reservation</div>-->
                        </div>
                        <div class="step-line"></div>
                        <div class="step" data-step="2">
                            <div class="step-number">2</div>
<!--                            <div class="step-label">Equipements</div>-->
                        </div>
                        <div class="step-line"></div>
                        <div class="step" data-step="3">
                            <div class="step-number">3</div>
<!--                            <div class="step-label">Confirmation</div>-->
                        </div>
                    </div>
                </div>
            </div>
            <div class="container text-center">
                <h1 class="display-4 mb-3">R√©servation</h1>
                <p class="lead">R√©servez votre chambre en quelques clics</p>
            </div>
        </section>

        <!-- Reservation Form -->
        <div class="container">
            <div t-if="error" class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
                <i class="fa fa-exclamation-circle me-2"></i>
                <span t-esc="error"/>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <form class="reservation-form" id="reservationForm" action="/book/form/equipments" method="POST">
                        <!-- D√©tails de la r√©servation -->
                        <div class="form-section">
                            <h3 class="section-title">D√©tails de la r√©servation</h3>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="roomNumber" class="form-label">Num√©ro de chambre *</label>
                                    <select class="form-select" id="roomNumber"  required = "required" onchange="updateRoomInfo()" name="room_id">
                                        <t t-foreach="rooms" t-as="room">
                                            <option t-att-value="room.id" t-att-data-type="room.room_category_id.name" t-att-data-price="room.total_price"><t t-esc="room.name+' - '+ room.room_category_id.name" /> </option>
                                        </t>
                                    </select>
                                    <div id="roomInfo" class="room-info" style="display: none;">
                                        <strong>Type:</strong> <span id="roomType"></span><br/>
                                        <strong>Prix:</strong> <span id="roomPrice"></span>‚Ç¨/nuit
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="guests" class="form-label">Nombre de personnes *</label>
                                    <input type="number" class="form-control" id="guests" required = "required" name="nb_person" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="checkIn" class="form-label">Date d'arriv√©e *</label>
                                    <input type="date" class="form-control" id="checkIn" required = "required" onchange="calculateTotal()" name="start_date"  />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="checkOut" class="form-label">Date de d√©part *</label>
                                    <input type="date" class="form-control" id="checkOut" required = "required" onchange="calculateTotal()" name="end_date" />
                                </div>
                            </div>
                        </div>

                        <!-- R√©sum√© des prix -->
                        <div class="price-summary" id="priceSummary" style="display: none;">
                            <h4>R√©sum√© de la r√©servation</h4>
                            <div class="d-flex justify-content-between">
                                <span>Chambre (<span id="nightsCount">0</span> nuit(s)):</span>
                                <span><span id="roomTotal">0</span>‚Ç¨</span>
                            </div>
                            <div id="equipmentSummary"></div>
                            <hr/>
                            <div class="d-flex justify-content-between">
                                <strong>Total:</strong>
                                <strong><span id="grandTotal">0</span>‚Ç¨</strong>
                            </div>
                        </div>

                        <!-- Bouton de soumission -->
                        <div class="text-center">
                            <button type="submit" class="btn-reserve">
                                Suivant
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </t>
  </template>

